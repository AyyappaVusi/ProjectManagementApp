<div class="user_admin_login">
<h1 style="color:hotpink">Sign in to Continue</h1>

<h4 style="color:aqua">User Sign In (Employee)</h4>
<% if user_signed_in? %>
        <p>Signed in as <strong><%= current_user.email %></strong></p>
        <%= link_to "Edit profile", edit_user_registration_path, class: "navbar-link" %> <br>
        <%= link_to "Signout", destroy_user_session_path, data: { turbo_method: :delete }, class: "navbar-link"  %><br>
        <% elsif !admin_signed_in? %>
        <%= link_to "User Sign up", new_user_registration_path, class: "navbar-link"  %> <br>
        <%= link_to "User Sign in", new_user_session_path, class: "navbar-link"  %><br>
        <% end %><br>
<h4 style="color:aqua">Admin Sign In (Manager)</h4>
<% if admin_signed_in? %>
        <p>Signed in as <strong><%= current_admin.email %></strong></p>
        
        <%= link_to "Edit profile", edit_admin_registration_path, class: "navbar-link" %> <br>
        <%= link_to "Signout", destroy_admin_session_path, data: { turbo_method: :delete }, class: "navbar-link"  %><br>
        <% elsif !user_signed_in? %>
        <%= link_to "Admin Sign up", new_admin_registration_path, class: "navbar-link"  %> <br>
        <%= link_to "Admin Sign in", new_admin_session_path, class: "navbar-link"  %><br>
        <% end %>
</div>